# ========================
# アプリケーション設定
# ========================
APP_NAME=Qupid API
APP_ENV=development  # development or production

# ========================
# データベース設定
# ========================
DATABASE_URL=sqlite+aiosqlite:///./qupid.db
# 本番環境では PostgreSQL を使用:
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/qupid

# ========================
# セキュリティ設定（必須）
# ========================
# 生成方法: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_IN_PRODUCTION

# トークンの有効期限（分）
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7日間

# 許可するメールドメイン
ALLOWED_EMAIL_DOMAIN=s.kyushu-u.ac.jp

# ========================
# メール送信設定
# ========================
# 本番環境では true に設定
ENABLE_EMAIL=false

# SMTP サーバー設定
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# SMTP 認証情報
# Gmail の場合はアプリパスワードを使用:
# https://support.google.com/accounts/answer/185833
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# 送信元メールアドレス
FROM_EMAIL=noreply@qupid.com

# メール送信のリトライ設定
EMAIL_MAX_RETRIES=3
EMAIL_RETRY_DELAY=2  # 秒

# ========================
# レート制限設定
# ========================
# メール送信のレート制限（1時間あたりの最大送信数）
EMAIL_RATE_LIMIT_PER_HOUR=10

# API全体のレート制限（1分あたりの最大リクエスト数）
API_RATE_LIMIT_PER_MINUTE=100

# ========================
# Sentry 設定（エラー監視）
# ========================
# 本番環境では必ず設定することを推奨
SENTRY_DSN=

# ========================
# CORS 設定
# ========================
# フロントエンドのURLをカンマ区切りで指定
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

